#!/bin/bash

# Define la tarea que realizar√° el script
total=10
echo "Realizando tarea:"

# Inicia el ciclo para actualizar la barra de progreso
for ((i=0; i<=${total}; i++)); do
    # Calcula el porcentaje de progreso
    percent=$((i * 100 / total))

    # Actualiza la barra de progreso
    bar=$(echo -ne "["; 
    for ((j=0; j<=${total}; j++)); do 
        if [[ ${j} -lt ${i} ]]; then 
            bar="${bar}#"
        else 
            bar="${bar} "
        fi 
    done; 
    echo -ne "${bar}] ${percent}%" "\r")

    # Simula una tarea que tarda un poco
    sleep 1
done

# Imprime el mensaje de tarea completada
echo -e "\nTarea completada!"
