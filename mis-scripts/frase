#!/bin/bash

# Este es un script que devuelve una frase de autoayuda
# Uso: ./frase_autoayuda.sh

# Definimos una lista de frases de autoayuda
frases=(
  "No te rindas, cada fracaso es una oportunidad para aprender."
  "Confía en ti mismo, eres capaz de lograr lo que te propongas."
  "No hay problema sin solución, sigue buscando la tuya."
  "La felicidad no es una estación a la que se llega, sino una manera de viajar."
  "Recuerda que eres más fuerte de lo que crees y más capaz de lo que imaginas."
)

# Elegimos una frase aleatoria de la lista
frase=${frases[$RANDOM % ${#frases[@]}]}

# Imprimimos la frase
echo "Frase de autoayuda: $frase"